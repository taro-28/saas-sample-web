{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
        "noDefaultExport": "off"
      },
      "nursery": {
        "useFilenamingConvention": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "files": {
    "ignore": ["node_modules", ".next", "report-bundle-size.js", "gql/**/*"]
  }
}
